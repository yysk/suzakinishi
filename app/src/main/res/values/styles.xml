<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupMenu" parent="Base.ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/popup_text</item>
    </style>

    <style name="TextBase">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <style name="TextBase.XXLarge">
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="TextBase.XLarge">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="TextBase.Large">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextBase.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextBase.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="TextBase.Small.Transparent">
        <item name="android:textColor">@color/white_transparent</item>
    </style>

    <style name="SeekBarVolume" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">
            @drawable/apptheme_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/apptheme_scrubber_progress_horizontal_holo_light
        </item>
        <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
    </style>

    <style name="SeekBarTrack" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">
            @drawable/track_progress_horizontal
        </item>
        <item name="android:indeterminateDrawable">
            @drawable/track_progress_horizontal
        </item>
        <item name="android:thumb">@drawable/track_control_selector</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginTop">-12dp</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>
</resources>
